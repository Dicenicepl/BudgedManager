@using BudgedManager.Models.Entity
@{
    ViewData["Title"] = "Summary of Expenses";

    // Dane przekazywane przez ViewData
    var totalExpenses = ViewData["Sum"];
    var highestExpense = ViewData["Highest"];
    var averageDays = ViewData["AverageDays"];
    var averageWeeks = ViewData["AverageWeeks"];
    var averageMonths = ViewData["AverageMonths"];
    var categoryExpenses = ViewData["categoryExpenses"] as List<SummaryDto>;
}

<h1>Summary of Expenses</h1>

<!-- Całkowite wydatki -->
<div>
    <h2>Total Expenses</h2>
    <p><strong>@totalExpenses</strong></p>
</div>

<!-- Największy wydatek -->
<div>
    <h2>Highest Expense (Category)</h2>
    <p><strong>@highestExpense</strong></p>
</div>

<!-- Średnie wydatki -->
<div>
    <h2>Average Expenses</h2>
    <ul>
        <li><strong>Daily:</strong> @averageDays</li>
        <li><strong>Weekly:</strong> @averageWeeks</li>
        <li><strong>Monthly:</strong> @averageMonths</li>
    </ul>
</div>

<!-- Wydatki według kategorii -->
<div>
    <h2>Expenses by Category</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in categoryExpenses)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Score</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Powrót do menu -->
<div>
    <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Return to Main Menu</a>
</div>